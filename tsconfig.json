{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "./src"],
    /*
    "plugins": [
      {
        "name": "next"
      }
    ],
    */
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "tailwind.config.js",
    "src/aura/custom.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
